<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Include header content -->
    <%- include('head') %>
</head>

<body>
    <div class="body-container login-body">
        <!-- Include Navbar -->
        <%- include('navbar') %>

            <!-- Contact Section -->
            <section class="contact-section py-5">
                <!-- Add vh-100 to make the container full height -->
                <div class="container d-flex justify-content-center align-items-center vh-80">
                    <div class="card login-card shadow-lg">
                        <div class="card-body">
                            <h1 class="card-title text-center mb-4">Login</h1>
                            <form>
                                <div class="mb-3">
                                    <label for="email" class="form-label">Email</label>
                                    <input type="email" class="form-control" id="email" required>
                                </div>
                                <div class="mb-3">
                                    <label for="password" class="form-label">Password</label>
                                    <input type="password" class="form-control" id="password" required>
                                </div>
                                <div class="d-grid">
                                    <button type="submit" class="btn btn-custom btn-block">Login</button>
                                </div>
                            </form>
                            <p class="text-center mt-3">
                                <a href="/forgotpassword" class="d-block">Forgot Password?</a>
                                <a href="/register" class="d-block">Register</a>
                            </p>                            
                        </div>
                    </div>
                </div>
            </section>


            <!-- Include Footer -->
            <%- include('footer') %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
