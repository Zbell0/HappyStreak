<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Include header content -->
    <%- include('head') %>
</head>

<body>
    <div class="body-container register-body">
        <!-- Include Navbar -->
        <%- include('navbar') %>

            <!-- Contact Section -->
            <section class="contact-section py-5">
                <!-- Add vh-100 to make the container full height -->
                <div class="container d-flex justify-content-center align-items-center vh-80">
                    <div class="card register-card shadow-lg">
                        <div class="card-body">
                            <h1 class="card-title text-center mb-4">Register</h1>
                            <form>
                                <div class="mb-3">
                                    <label for="name" class="form-label">Name</label>
                                    <input type="text" class="form-control" id="name" required>
                                </div>
                                <div class="mb-3">
                                    <label for="email" class="form-label">Email</label>
                                    <input type="email" class="form-control" id="email" required>
                                </div>
                                <div class="mb-3">
                                    <label for="password" class="form-label">Password</label>
                                    <input type="password" class="form-control" id="password" required>
                                </div>
                                <div class="mb-3">
                                    <label for="confirm-password" class="form-label">Confirm Password</label>
                                    <input type="password" class="form-control" id="confirm-password" required>
                                </div>
                                <button type="submit" class="btn btn-custom w-100">Register</button>
                            </form>
                            <p class="text-center mt-3">
                                Already have an account? <a href="/login">Login here</a>
                            </p>                          
                        </div>
                    </div>
                </div>
            </section>


            <!-- Include Footer -->
            <%- include('footer') %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
