<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Include header content -->
    <%- include('head') %>
</head>

<body>
    <div class="body-container">
        <!-- Include Navbar -->
        <%- include('navbar') %>

        <!-- Main Section: Forgot Password Form -->
        <section class="forgot-password-section py-5">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <div class="card custom-card">
                            <div class="card-body">
                                <h2 class="text-center">Forgot Password</h2>
                                <form action="forgotpassword.html" method="post">
                                    <!-- Email Input -->
                                    <div class="form-group mb-3">
                                        <label for="email">Enter Email:</label>
                                        <input type="email" class="form-control" id="email" name="email" placeholder="Email" required>
                                    </div>

                                    <!-- OTP Input -->
                                    <div class="form-group mb-3">
                                        <label for="otp">Enter OTP:</label>
                                        <input type="text" class="form-control" id="otp" name="otp" placeholder="One-Time Password" required>
                                    </div>

                                    <!-- New Password Input -->
                                    <div class="form-group mb-4">
                                        <label for="new-password">Enter New Password:</label>
                                        <input type="password" class="form-control" id="new-password" name="new-password" placeholder="New Password" required>
                                    </div>

                                    <!-- Submit Button -->
                                    <div class="d-grid">
                                        <button type="submit" class="btn btn-custom btn-block">Submit</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Include Footer -->
        <%- include('footer') %>
    </div>

    <!-- Bootstrap JS (Handled by import in index.js) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
